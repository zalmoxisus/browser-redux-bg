{
  "name": "browser-redux-bg",
  "version": "0.0.1",
  "description": "Messaging library for Cross-browser extensions and Chrome apps. Calls actions from the background script.",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib dist coverage",
    "lint": "eslint src test examples",
    "build": "babel src --out-dir lib",
    "preversion": "npm run clean && npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm run clean",
    "prepublish": "npm run clean && npm run build",
    "test": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zalmoxisus/browser-redux-bg.git"
  },
  "homepage": "https://github.com/zalmoxisus/browser-redux-bg",
  "keywords": [
    "extension",
    "app",
    "chrome",
    "firefox",
    "safari",
    "redux",
    "messaging"
  ],
  "devDependencies": {
    "babel": "^5.5.8",
    "babel-core": "^5.6.18",
    "babel-eslint": "^4.1.0",
    "babel-loader": "^5.1.4",
    "eslint": "^1.2.1",
    "eslint-config-airbnb": "0.0.8",
    "eslint-plugin-react": "^3.2.3",
    "expect": "^1.8.0",
    "isparta": "^3.0.3",
    "mocha": "^2.2.5",
    "rimraf": "^2.3.4",
    "webpack": "^1.9.6"
  },
  "peerDependencies": {
    "redux": "^3.0.2",
    "redux-persist": ">1.0.0"
